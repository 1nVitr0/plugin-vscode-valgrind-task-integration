{
  "name": "valgrind-task-integration",
  "displayName": "Valgrind Task Integration",
  "description": "Integrate valgrind into vscode tasks and launch config",
  "author": "1nVitr0",
  "publisher": "1nVitr0",
  "repository": {
    "type": "git",
    "url": "https://github.com/1nVitr0/plugin-vscode-valgrind-task-integration.git"
  },
  "icon": "resources/icon.png",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Debuggers",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "valgrind",
    "task",
    "launch",
    "cpp",
    "debug"
  ],
  "activationEvents": [
    "onCommand:valgrind-task-integration.valgrindPid",
    "onCommand:valgrind-task-integration.valgrindGdbArg",
    "onCommand:workbench.action.tasks.runTask"
  ],
  "main": "./dist/extension.js",
  "extensionDependencies": [
    "ms-vscode.cmake-tools"
  ],
  "contributes": {
    "commands": [
      {
        "command": "valgrind-task-integration.valgrindPid",
        "title": "Valgrind Task Integration: Get Valgrind Debugger pid"
      },
      {
        "command": "valgrind-task-integration.valgrindGdbArg",
        "title": "Valgrind Task Integration: Get Valgrind Debugger gdb arguments"
      }
    ],
    "taskDefinitions": [
      {
        "type": "valgrind-debug",
        "required": [
          "target"
        ],
        "properties": {
          "target": {
            "type": "string"
          },
          "valgrind": {
            "type": "object",
            "required": [
              "args"
            ],
            "properties": {
              "args": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      {
        "type": "valgrind",
        "required": [
          "target"
        ],
        "properties": {
          "target": {
            "type": "string"
          },
          "valgrind": {
            "type": "object",
            "required": [
              "args"
            ],
            "properties": {
              "args": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    ],
    "problemMatchers": [
      {
        "name": "valgrind",
        "owner": "cpp",
        "applyTo": "allDocuments",
        "fileLocation": "absolute",
        "source": "valgrind",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^==\\d+== Using Valgrind-[\\d\\.]+",
          "endsPattern": "^==\\d+== ERROR SUMMARY:"
        },
        "pattern": [
          {
            "regexp": "^==\\d+== ((?:Invalid|Syscall param|Conditional jump or move|Mismatched|Source and destination overlap|Argument) .+)$",
            "message": 1
          },
          {
            "regexp": "^==\\d+== \\s+(?:by|at).*\\((?:in )?([^:)]+)(?:\\:(\\d+))?\\)$",
            "file": 1,
            "line": 2,
            "loop": true
          }
        ]
      },
      {
        "name": "valgrind-debug",
        "base": "$valgrind",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^==\\d+== Using Valgrind-[\\d\\.]+",
          "endsPattern": "^==\\d+== TO DEBUG THIS PROCESS"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.53.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^8.1.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "semantic-release": "^17.4.2",
    "semantic-release-vsce": "^3.3.0",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  },
  "release": {
    "branches": [
      "main",
      "develop"
    ],
    "verifyConditions": [
      "semantic-release-vsce",
      "@semantic-release/github"
    ],
    "prepare": {
      "path": "semantic-release-vsce",
      "packageVsix": true
    },
    "publish": [
      "semantic-release-vsce",
      {
        "path": "@semantic-release/github",
        "assets": "*.vsix"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
